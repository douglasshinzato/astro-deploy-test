---
// import { Icon } from "astro-icon/components"
import {
  Astronav,
  MenuItems,
  MenuIcon,
  OpenIcon,
  CloseIcon,
} from "astro-navbar"

const menuItens = [
  {
    title: "Inicio",
    href: "/",
  },
  {
    title: "Sobre",
    href: "/about",
  },
  {
    title: "Projetos",
    href: "/",
  },
  {
    title: "Contato",
    href: "/contact",
  },
]
---

<header class="lg:flex p-5 gap-5">
  <Astronav>
    <div class="flex w-full justify-between">
      <a href="/">
        <span class="font-semibold text-2xl"
          >shinzato<span class="text-zinc-500">.dev</span>
        </span>
      </a>
      <div class="block lg:hidden">
        <MenuIcon class="w-8 h-8 text-neutral-300" />
      </div>
    </div>
    <MenuItems class="relative hidden lg:flex">
      <ul
        class="absolute lg:static flex flex-col lg:flex-row gap-5 mt-5 lg:mt-0 p-2 pr-4 lg:pt-0 text-end right-0 w-48 lg:w-full bg-zinc-950/30 backdrop-blur-sm shadow-md shadow-black outline outline-1 outline-zinc-300 rounded lg:outline-none lg:backdrop-blur-none lg:bg-transparent lg:shadow-none"
      >
        {
          menuItens.map((item) => (
            <li class="hover:text-zinc-400 text-xl">
              <a href={item.href}>{item.title}</a>
            </li>
          ))
        }
      </ul>
    </MenuItems>
  </Astronav>
</header>

