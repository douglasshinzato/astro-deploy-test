---
// @ts-ignore
import { Icon } from "astro-icon/components"

const features = [
  {
    title: "Pure Code, no CMS",
    description:
      "I'll build your site using React, Astro, or just plain ol' HTML + CSS + JavaScript.",
    icon: "bx:code-block",
  },
  {
    title: "100% Static HTML, No JS",
    description:
      "With Astro, it will renders your entire page to static HTML, removing all JavaScript from your final build by default.",
    icon: "bx:bxs-window-alt",
  },
  {
    title: "On-Demand Components",
    description:
      "Need some JS? Astro can automatically hydrate interactive components when they become visible on the page.  ",
    icon: "bx:bxs-data",
  },

  {
    title: "SEO Enabled",
    description:
      "Automatic sitemaps, RSS feeds, pagination and collections take the pain out of SEO and syndication. It just works!",
    icon: "bx:bxs-file-find",
  },
]
---

<div>
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight text-neutral-200">
    Your website built with the best frameworks
  </h2>
  <p class="text-lg mt-4 text-neutral-300">
    From a Landing page to a FullStack website or e-commerce. Let me help you
    build your presence on the web.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class=" w-8 h-8 shrink-0">
          <Icon class="text-neutral-300" name={item.icon} size={30} />
        </div>
        <div>
          <h3 class="font-semibold text-lg text-neutral-200">{item.title}</h3>{" "}
          <p class="text-neutral-300 mt-2 leading-relaxed">
            {item.description}
          </p>
        </div>
      </div>
    ))
  }
</div>
